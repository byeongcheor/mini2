<script>
	var searchKey="${pvo.searchKey}";
	var searchWord="${pvo.searchWord}";
	
	function reloadPage(page){
		var url = "/mini/course/courseList?nowPage="+page;
		if(searchWord!=null && searchWord!=""){
			url += "&searchKey="+searchKey+"&searchWord="+searchWord;
		}
		location.href = url;
	}
</script>

	
	
